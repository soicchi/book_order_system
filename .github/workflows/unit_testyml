name: Unit test
on:
  pull_request:
    branches:
      - main
    paths:
      - "app/**"

jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.23'

      - name: Install dependencies
        run: go mod download

      - name: Check formatting
        id: gofmt
        run: |
          gofmt_output=$(gofmt -l .)
          if [ -n "$gofmt_output" ]; then
            echo "Files not formatted:"
            echo "$gofmt_output"
            exit 1
          fi

      - name: Check vet
        id: govet
        run: |
          govet_output=$(go vet ./...)
          if [ -n "$govet_output" ]; then
            echo "Go vet found issues:"
            echo "$govet_output"
            exit 1
          fi

      - name: Run tests
        run: go test -v ./...
